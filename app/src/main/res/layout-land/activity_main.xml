<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="camcompany.camcalc.MainActivity"
    android:background="@color/colorPrimary">


    <TextView
        android:text="0"
        android:layout_width="fill_parent"
        android:id="@+id/textView2"
        tools:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:textSize="35sp"
        android:gravity="bottom|right"
        android:maxLines="2"
        android:maxLength="17"
        android:layout_height="80dp" />

    <Button
        android:text="-"
        android:layout_width="90dp"
        android:id="@+id/button8"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/button3"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickOperator"
        android:layout_height="50dp" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/button10"
        android:layout_below="@+id/button6"
        android:layout_toEndOf="@+id/button5"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber" />

    <Button
        android:text="x"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/button12"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/button11"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickOperator" />

    <Button
        android:text="*"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button16"
        android:layout_below="@+id/button12"
        android:layout_toEndOf="@+id/button15"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickOperator" />

    <Button
        android:text="+"
        android:layout_width="90dp"
        android:id="@+id/button4"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickOperator"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:id="@+id/button3"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/button4" />

    <Button
        android:text="8"
        android:layout_width="90dp"
        android:id="@+id/button2"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:text="7"
        android:layout_width="90dp"
        android:id="@+id/button"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:id="@+id/button6"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_height="50dp"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:id="@+id/button5"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignStart="@+id/button" />

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/button9"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_alignBaseline="@+id/button10"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:text="C"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button13"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickClear"
        android:layout_below="@+id/button9"
        android:layout_toStartOf="@+id/button14" />

    <Button
        android:text="0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button14"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button9"
        android:layout_toStartOf="@+id/button15" />

    <Button
        android:text="="
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button15"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickEqual"
        android:layout_below="@+id/button11"
        android:layout_alignStart="@+id/button11" />

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/button11"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_alignBaseline="@+id/button12"
        android:layout_alignBottom="@+id/button12"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:id="@+id/button7"
        tools:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_toEndOf="@+id/button2" />
</RelativeLayout>
